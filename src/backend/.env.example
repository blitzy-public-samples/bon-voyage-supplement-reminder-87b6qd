NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=supplement_reminder
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Twilio SMS Service Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your_analytics_tracking_id

# Authentication and Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Caching (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Service
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_service_api_key

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Version
API_VERSION=v1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Monitoring and Error Tracking
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Feature Flags
FEATURE_QR_CODE_GENERATION=true
FEATURE_TIMEZONE_SUPPORT=true

# Third-party Integration (example)
INTEGRATION_API_KEY=your_integration_api_key
INTEGRATION_API_SECRET=your_integration_api_secret

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Content Delivery Network (CDN)
CDN_URL=https://your-cdn-url.com

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Push Notifications (if applicable)
PUSH_NOTIFICATION_SERVICE=firebase
FIREBASE_SERVER_KEY=your_firebase_server_key

# Webhook Configuration (if applicable)
WEBHOOK_SECRET=your_webhook_secret

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20

# Temporary File Storage
TEMP_FILE_PATH=/tmp/supplement-reminder

# External Services Timeouts (in milliseconds)
API_TIMEOUT=5000
SMS_TIMEOUT=3000
EMAIL_TIMEOUT=10000

# Development-only Configuration
DEV_MOCK_SMS=false
DEV_MOCK_EMAIL=false

# Production-only Configuration
PROD_LOAD_BALANCER_URL=https://lb.your-domain.com

# Test-only Configuration
TEST_MOCK_EXTERNAL_SERVICES=true